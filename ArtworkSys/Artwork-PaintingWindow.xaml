<Window x:Class="IdeasFactory.ArtworkSys.Artwork_PaintingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Artwork_PaintingWindow" Height="300" Width="400"
        WindowStyle="None">
    <Grid Name="WindowGrid">
        <Label Name="TitleLabel" Content="Label" Margin="0,0,117,55" Background="#7F000000" Foreground="White" FontSize="20" Height="34" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="275"/>
        <Label Name="InfoLabel" Content="Label" VerticalContentAlignment="Center" Margin="0,0,117,29" Background="#7F000000" Foreground="White" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="275"/>
        <Button Name="NextButton" Margin="0,0,61,29" Foreground="{x:Null}" BorderBrush="#7F000000" Click="NextButton_Click" Background="#7F000000" HorizontalAlignment="Right" Width="56" Height="60" VerticalAlignment="Bottom"/>
        <Button Name="BackButton" Content="Button" HorizontalAlignment="Right" Height="40" VerticalAlignment="Top" Width="40" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="BackButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Icon/BackArrow.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
